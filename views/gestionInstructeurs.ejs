<h1>Ajouter un Instructeur</h1>

<!-- Formulaire pour ajouter un instructeur -->
<form action="/ajouterInstructeur" method="POST">
    <table>
        <tr>
            <td><label for="nom">Nom de l'instructeur</label></td>
            <td><input type="text" name="NOM" required></td>
        </tr>
        <tr>
            <td><label for="prenom">Prénom de l'instructeur</label></td>
            <td><input type="text" name="PRÉNOM" required></td>
        </tr>
        <tr>
            <td><label for="telephone">Numéro de téléphone de l'instructeur</label></td>
            <td><input type="text" name="NUMERO_TELEPHONE" required></td>
        </tr>
        <tr>
            <td colspan="2" style="text-align: center;">
                <button type="submit">Ajouter Instructeur</button>
            </td>
        </tr>
    </table>
</form>

<!-- Liste des instructeurs avec options de suppression -->
<h2>Liste des Instructeurs</h2>
<table>
    <thead>
        <tr>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Numéro de téléphone</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% for (let i = 0; i < instructeurs.length; i++) { %>
        <tr>
            <td><%= instructeurs[i].NOM %></td>
            <td><%= instructeurs[i].PRÉNOM %></td>
            <td><%= instructeurs[i].NUMERO_TELEPHONE %></td>
            <td>
                <form action="/supprimerInstructeur" method="POST" style="display: inline;">
                    <input type="hidden" name="id" value="<%= instructeurs[i].ID %>">
                    <button type="submit">Supprimer</button>
                </form>
            </td>
        </tr>
        <% } %>
    </tbody>
</table>

